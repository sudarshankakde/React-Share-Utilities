{
  "name": "react-share-utilities",
  "version": "0.0.2",
  "description": "React sharing utilities with clipboard, social share, and deep link support",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudarshankakde/React-Share-Utilities.git"
  },
  "keywords": [
    "share",
    "react",
    "utilities",
    "react-share",
    "social-share",
    "deeplink",
    "clipboard",
    "react-deeplink",
    "react-clipboard",
    "react-social-share",
    "react-share-utilities"
  ],
  "author": "Web Dev Simplified",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sudarshankakde/React-Share-Utilities/issues"
  },
  "homepage": "https://react-share.sudarshankakde.tech/",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "prettier": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
